# Ultra Msg WhatsApp Configuration
# احصل على هذه البيانات من https://ultramsg.com

# Instance ID - معرف الـ Instance
ULTRAMSG_INSTANCE_ID=your_instance_id

# Token - التوكن
ULTRAMSG_TOKEN=your_token

# WhatsApp Group ID - معرف القروب
# مثال: 120363123456789012@g.us
WHATSAPP_GROUP_ID=your_group_id@g.us

# OpenAI Configuration (اختياري)
# احصل على API Key من https://platform.openai.com
# يستخدم لتحسين نص البلاغات تلقائياً
OPENAI_API_KEY=your_openai_api_key

# Server Configuration
PORT=3000
